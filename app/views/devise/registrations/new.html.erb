<div class="row"><div class="span4 offset4">
<h2 class="center">Sign up</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<table class="login">
  <tr class="shade3">
    <td class="leadin"><%= f.label :name %></td>
    <td class="main"><%= f.text_field :name %></td>
  </tr>
  <tr class="shade3">
    <td class="leadin"><%= f.label :email %></td>
    <td class="main"><%= f.email_field :email %></td>
  </tr>
  <tr class="shade3">
    <td class="leadin"><%= f.label :password %></td>
    <td class="main"><%= f.password_field :password %></td>
  </tr>
  <tr class="shade3 last-child">
    <td class="leadin"><%= f.label :confirmation %></td>
    <td class="main"><%= f.password_field :password_confirmation %></td>
  </tr>
  <tr class="shade2">
    <td class="links" colspan="2">
      <%= f.submit "Sign up", :class => "btn" %>  
      <%= render "devise/shared/links" %>
    </td>
  </tr>
  
</table>
<% end %>


</div></div>