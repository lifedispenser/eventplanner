  <div class="offset1 span4" id="section-login">
    <table class="eptable login"> 
      <% if current_user %>
      <tr class="shade3">
        <td colspan='2' class="login">
          <div class="members">
            <ul>
              <li class="me"><%= current_user.email %> <span class="count"></span></li>
            </ul>
          </div>
        </td>
      </tr>
      <tr class="shade3 last-child">
        <td class="sub">
          <%= link_to 'Edit account', user_path(current_user) %> |
          <%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %>
        </td>
        <td class="actions">
          <a href="/events">Back Home</a>
        </td>
      </tr>
      <tr class="shade2" id="section-tools">
      </tr>
      <% else %>
      <%= form_for("user", :url => user_session_path) do |f| %>
      <tr class="shade3">
        <td class="leadin">Email:</td>
        <td class="main"><%= f.text_field :email %></td>
      </tr>
      <tr class="shade3 last-child">
        <td class="leadin">Password:</td>
        <td class="main bot"><%= f.password_field :password %></td>
      </tr>
      <tr class="shade2">
        <td class="links" colspan='2'>
          <%= link_to 'Register', new_user_registration_path %>
          <%= f.submit 'Sign in', :class => "btn signin" %>
          <%= f.check_box :remember_me %> Remember me
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
